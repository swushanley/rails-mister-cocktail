
<div class="container">
<!-- app/views/products/show.html.erb -->
  <div class="row col-md-6 col-md-offset-3">
    <% if @cocktail.photo? %>
    <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
    <% end %>
    <h1><%= @cocktail.name %></h1>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %><%= dose.ingredient.name %>
        <%= link_to "delete", dose_path(dose), method: :delete %></li>
      <% end %>
    </ul>
    <h2>Add a dose</h2>
    <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <!-- ^@cocktail and @dose bc dose nested in cocktail -->
      <%= f.association :ingredient%>
      <%= f.input :description%>
      <%= f.button :submit %>
    <% end %>
    <%= link_to 'Back', cocktails_path %>
  </div>
</div>



